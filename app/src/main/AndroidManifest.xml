<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.autopromaker_pro.KanjiStudy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_custom_icon_pro"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_custom_icon_pro_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KanjiStudy">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/ad_id" />
        <activity
            android:name=".KanjiDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.KanjiStudy_ActionBar" />
        <activity
            android:name=".KanjiClassActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.KanjiStudy_ActionBar" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>